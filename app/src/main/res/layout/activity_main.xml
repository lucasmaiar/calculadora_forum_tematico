<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/texto_entrada"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="40dp"
        android:gravity="end"
        android:layout_margin="20dp"
        android:ellipsize="start"
        android:singleLine="true"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/texto_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="end"
        android:layout_margin="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_limpar"
            style="@style/operator_button"
            android:layout_weight="3"
            android:text="C" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_dividir"
            style="@style/operator_button"
            android:text="/" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_numero_7"
            style="@style/number_button"
            android:layout_weight="1"
            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_numero_8"
            style="@style/number_button"
            android:layout_weight="1"
            android:text="8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_numero_9"
            style="@style/number_button"
            android:layout_weight="1"
            android:text="9" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_numero_x"
            style="@style/operator_button"
            android:layout_weight="1"
            android:text="x" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_numero_4"
            style="@style/number_button"
            android:layout_weight="1"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_numero_5"
            style="@style/number_button"
            android:layout_weight="1"
            android:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_numero_6"
            style="@style/number_button"
            android:layout_weight="1"
            android:text="6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_numero_subtrair"
            style="@style/operator_button"
            android:layout_weight="1"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_numero_1"
            style="@style/number_button"
            android:layout_weight="1"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_numero_2"
            style="@style/number_button"
            android:layout_weight="1"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_numero_3"
            style="@style/number_button"
            android:layout_weight="1"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_numero_somar"
            style="@style/operator_button"
            android:layout_weight="1"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_numero_ponto"
            style="@style/number_button"
            android:layout_weight="1"
            android:text="." />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_numero_0"
            style="@style/number_button"
            android:layout_weight="1"
            android:text="0" />

        <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backspace"
        style="@style/number_button"
            android:src="@drawable/backspace"
            android:scaleType="center" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_numero_igual"
            style="@style/operator_button"
            android:layout_weight="1"
            android:text="=" />
    </LinearLayout>

</LinearLayout>